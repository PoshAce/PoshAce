# MySQL Configuration Optimized for Magento 2.4.7
# Add these settings to your /etc/mysql/my.cnf or /etc/my.cnf file

[mysql]
default-character-set = utf8mb4

[mysqld]
# Basic settings
user = mysql
default-storage-engine = InnoDB
socket = /var/run/mysqld/mysqld.sock
pid-file = /var/run/mysqld/mysqld.pid
bind-address = 127.0.0.1

# Character set
character-set-client-handshake = FALSE
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci
init_connect = 'SET NAMES utf8mb4'

# Performance optimizations for Magento
# Adjust based on your server's RAM (these are for a server with 8GB+ RAM)

# InnoDB settings
innodb_buffer_pool_size = 4G  # 50-70% of total RAM
innodb_buffer_pool_instances = 4
innodb_log_file_size = 256M
innodb_log_buffer_size = 32M
innodb_flush_log_at_trx_commit = 2
innodb_flush_method = O_DIRECT
innodb_file_per_table = 1
innodb_open_files = 400
innodb_io_capacity = 400
innodb_io_capacity_max = 2000
innodb_read_io_threads = 4
innodb_write_io_threads = 4
innodb_thread_concurrency = 0
innodb_stats_on_metadata = 0
innodb_use_native_aio = 1
innodb_strict_mode = 1

# Query Cache (for MySQL < 8.0)
query_cache_type = 1
query_cache_size = 256M
query_cache_limit = 2M

# Memory settings
tmp_table_size = 256M
max_heap_table_size = 256M
sort_buffer_size = 4M
read_buffer_size = 2M
read_rnd_buffer_size = 16M
join_buffer_size = 8M

# Connection settings
max_connections = 200
max_connect_errors = 1000000
connect_timeout = 60
wait_timeout = 28800
interactive_timeout = 28800

# Thread settings
thread_cache_size = 50
thread_stack = 256K

# Table settings
table_open_cache = 4000
table_definition_cache = 2000
open_files_limit = 65535

# MyISAM settings (if needed)
key_buffer_size = 256M
myisam_sort_buffer_size = 512M

# Logging
slow_query_log = 1
slow_query_log_file = /var/log/mysql/mysql-slow.log
long_query_time = 2
log_queries_not_using_indexes = 1

# Binary logging
server-id = 1
log-bin = mysql-bin
binlog_format = mixed
expire_logs_days = 7
max_binlog_size = 100M

# Safety
sql_mode = "STRICT_TRANS_TABLES,ERROR_FOR_DIVISION_BY_ZERO,NO_AUTO_CREATE_USER,NO_ENGINE_SUBSTITUTION"

# Performance Schema (MySQL 5.6+)
performance_schema = ON
performance_schema_max_table_instances = 400
performance_schema_max_table_handles = 4000

[mysqldump]
quick
quote-names
max_allowed_packet = 1024M

[mysql]
no-auto-rehash

[myisamchk]
key_buffer_size = 512M
sort_buffer_size = 512M
read_buffer = 8M
write_buffer = 8M

[mysqlhotcopy]
interactive-timeout