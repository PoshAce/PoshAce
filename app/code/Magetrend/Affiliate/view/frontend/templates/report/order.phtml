 */
?>
<div class="block block-dashboard-orders">
    <?php
    $collection = $block->getCollection();
    $viewAll = $block->getViewAll();
    $count = count($collection);
    ?>
    <div class="block-title order">
        <strong><?php echo  /* @escapeNotVerified */ $block->getTitle(); ?></strong>
        <?php if ($count > 0 && !empty($viewAll)) : ?>
            <a class="action view" href="<?php echo  /* @escapeNotVerified */ $block->getUrl($viewAll) ?>">
                <span><?php echo  /* @escapeNotVerified */ __('View All') ?></span>
            </a>
        <?php endif; ?>
    </div>
    <div class="block-content">
        <?php if ($count > 0) : ?>
            <div class="table-wrapper orders-recent">
                <table class="data table table-order-items recent" id="my-orders-table">
                    <caption class="table-caption"><?php echo /* @escapeNotVerified */ $block->getTitle(); ?></caption>
                        <thead>
                            <tr>
                                <th scope="col" class="col id">
                                    <?php echo  /* @escapeNotVerified */ __('Order ID #') ?>
                                </th>
                                <th scope="col" class="col date">
                                    <?php echo  /* @escapeNotVerified */ __('Date') ?>
                                </th>
                                <th scope="col" class="col amount">
                                    <?php echo  /* @escapeNotVerified */ __('Order Amount') ?>
                                </th>
                                <th scope="col" class="col invoiced_amount">
                                    <?php echo  /* @escapeNotVerified */ __('Invoiced Amount') ?>
                                </th>
                                <th scope="col" class="col refunded_amount">
                                    <?php echo  /* @escapeNotVerified */ __('Refunded Amount') ?>
