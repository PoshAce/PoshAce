                            <td data-th="<?php echo $block->escapeHtml(__('Commission')) ?>" class="col commission">
                                <?php echo  $block->escapeHtml($record->getFormattedCommissions())?>
                            </td>

                            <td data-th="<?php echo  $block->escapeHtml(__('Status')) ?>" class="col status">
                                <?php echo  /* @escapeNotVerified */ $record->getStatusLabel() ?>
                            </td>

                            <td data-th="<?php echo  $block->escapeHtml(__('Comments')) ?>" class="col comment">
                                <?php echo  /* @escapeNotVerified */ $record->getComment() ?>
                            </td>
                        </tr>
