                                <th scope="col" class="col commission">
                                    <?php echo /* @escapeNotVerified */ __('Commission') ?>
                                </th>
                                <th scope="col" class="col status">
                                    <?php echo  /* @escapeNotVerified */ __('Status') ?>
                                </th>
                                <th scope="col" class="col comment">
                                    <?php echo  /* @escapeNotVerified */ __('Comments') ?>
                                </th>
                            </tr>
                        </thead>
                    <tbody>
                    <?php foreach ($collection as $record) : ?>
                        <tr>
                            <td data-th="<?php echo  $block->escapeHtml(__('Order #')) ?>" class="col id">
                                <?php echo  /* @escapeNotVerified */ $record->getOrderIncrementId() ?>
