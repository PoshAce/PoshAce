<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
               <resource id="Magento_Backend::marketing">
                    <resource id="Magetrend_Affiliate::affiliate" title="Affiliate">
                        <resource id="Magetrend_Affiliate::account" title="Accounts" sortOrder="1"/>
                        <resource id="Magetrend_Affiliate::program" title="Programs" sortOrder="10"/>
                        <resource id="Magetrend_Affiliate::withdrawal" title="Manage Withdrawals" sortOrder="30"/>
                        <resource id="Magetrend_Affiliate::formbuilder" title="Registration Form" sortOrder="40"/>
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Magetrend_Affiliate::config" title="Affiliate Config" />
                            <resource id="Magetrend_Affiliate::api_record" title="Affiliate API Record" />
                            <resource id="Magetrend_Affiliate::api_account" title="Affiliate API Account" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
