<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <!-- Optimize CSS loading -->
        <css src="css/critical.css" media="all" />
        
        <!-- Load non-critical CSS asynchronously -->
        <css src="css/non-critical.css" media="print" onload="this.media='all'" />
        
        <!-- Preload critical resources -->
        <link rel="preload" href="{{view url='images/logo.svg'}}" as="image" />
        
        <!-- DNS prefetch for external resources -->
        <link rel="dns-prefetch" href="//fonts.googleapis.com" />
        <link rel="dns-prefetch" href="//fonts.gstatic.com" />
        <link rel="dns-prefetch" href="//ajax.googleapis.com" />
        
        <!-- Preconnect to critical origins -->
        <link rel="preconnect" href="https://fonts.googleapis.com" crossorigin />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        
        <!-- Optimize JavaScript loading -->
        <script src="js/critical.js" />
        <script src="js/non-critical.js" defer="defer" />
    </head>
</page>